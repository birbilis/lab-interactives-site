      "id": "heat",
      "type": "button",
      "action": [
        "if (get('temperature') > 100000) {",
        "  setComponentDisabled('heat', true);",
        "  return;",
        "}",
        "batch(function () {",
        "  var props;",
        "  for (var i = 0, len = getNumberOfAtoms(); i < len; i++) {",
        "    props = getAtomProperties(i);",
        "    setAtomProperties(i, {vx: props.vx * 1.1, vy: props.vy * 1.1});",
        "  }",
        "});"
      ],
