        "  var props;",
        "  for (var i = 0, len = getNumberOfAtoms(); i < len; i++) {",
        "    props = getAtomProperties(i);",
        "    setAtomProperties(i, {vx: props.vx * 0.9, vy: props.vy * 0.9});",
        "  }",
        "});",
        "if (get('temperature') < 100000) {",
        "  setComponentDisabled('heat', false);",
        "}"
